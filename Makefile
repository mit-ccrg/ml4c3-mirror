SHELL := bash
.ONESHELL:

ifeq ($(origin .RECIPEPREFIX), undefined)
> $(error This Make does not support .RECIPEPREFIX. Please use GNU Make 4.0 or later)
endif
.RECIPEPREFIX = >

.PHONY: help \
> setup \
> clean \
> lint_staged \
> lint_all

help:
> @echo
> @echo "ml4c3 Makefile commands"
> @echo
> @echo "setup       -- creates env and sets up git commit hooks."
> @echo
> @echo "clean       -- cleans autogenerated files like cache"
> @echo
> @echo "lint_staged -- lints files staged for commit"
> @echo
> @echo "lint_all    -- lints all files"
> @echo

setup:
> @echo Setting up the repo...
> @conda env create -f .pre-commit-env.yml
> @conda run -n ml4c3 pre-commit install

clean:
> @echo Cleaning files...
> @rm -rf .mypy_cache
> @rm -rf .pytest_cache
> @rm -rf ml4c3.egg-info
> @find . -iname "__pycache__" -print0 | xargs -0 rm -rf
> @find . -iname ".ipynb_checkpoints" -print0 | xargs -0 rm -rf

lint_staged:
> @echo Running hook with staged files...
> @pre-commit run

lint_all:
> @echo Running hook on all files...
> @pre-commit run --all-files
